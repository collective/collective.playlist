<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    xmlns:plone="http://namespaces.plone.org/plone"
    i18n_domain="collective.playlist">

  <!-- Set overrides folder for Just-a-Bunch-Of-Templates product -->
  <include package="z3c.jbot" file="meta.zcml" />
  <browser:jbot
      directory="overrides"
      layer="collective.playlist.interfaces.ICollectivePlaylistLayer"
      />

  <!-- Publish static files -->
  <plone:static
      name="collective.playlist"
      type="plone"
      directory="static"
      />
  <plone:static
      name="collective.playlist.extern"
      type="plone"
      directory="static-extern"
      />      
  <!-- <browser:resourceDirectory
    name="collective.playlist"
    directory="static" />

  <browser:resourceDirectory
    name="collective.playlist.extern"
    directory="static-extern" /> -->


    <browser:page
      name="playlist-settings"
      for="Products.CMFPlone.interfaces.IPloneSiteRoot"
      class=".settings.SettingsView"
      permission="cmf.ManagePortal"
      />


  <browser:viewlet
    name="bluechurch.playerviewlet"
    manager="plone.app.layout.viewlets.interfaces.IPortalHeader"
    template="templates/playerviewlet.pt"
    class=".viewlets.PlaylistViewlet"
    layer="collective.playlist.interfaces.ICollectivePlaylistLayer"
    permission="zope2.View"
    />

  <browser:page
    name="playlistview"
    for="collective.playlist.content.playlist.IPlaylist"
    layer="collective.playlist.interfaces.ICollectivePlaylistLayer"
    class=".views.PlaylistView"
    template="templates/playlistview.pt"
    permission="zope2.View"
    />

  <adapter
    for="Products.CMFCore.interfaces.IFolderish
        zope.publisher.interfaces.browser.IDefaultBrowserLayer
        plone.dexterity.interfaces.IDexterityFTI"
    provides="zope.publisher.interfaces.browser.IBrowserPage"
    factory="plone.dexterity.browser.add.DefaultAddView"
    name="track"
    />

</configure>
